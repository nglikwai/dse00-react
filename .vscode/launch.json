{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "jest",
      "request": "launch",
      "args": ["--runInBand"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "debug",
      "url": "http://hkdev.com:3000",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${workspaceRoot}/src/*",
        "webpack:///pages/*": "${workspaceRoot}/pages/*"
      }
    }
  ]
}
